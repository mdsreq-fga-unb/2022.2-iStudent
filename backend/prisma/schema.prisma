// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  password  String
  name      String
  biography String
  role      Role     @default(STUDENT)
  subject   Subject?
  Class     Class[]
  courses   Course[]
}

model Subject {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  teacher   User     @relation(fields: [teacherId], references: [id])
  teacherId Int      @unique
}

model Class {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  type      ClassType @default(REMOTA)
  days      String[]
  time      String
  student   User      @relation(fields: [studentId], references: [id])
  studentId Int
  teacherId Int
  accepted  Boolean?
}

model Course {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  name          String   @unique
  description   String
  price         Int
  contents      String[]
  courseRating  Int
  teacher       User     @relation(fields: [teacherId], references: [id])
  teacherId     Int
  totalStudents Int
  totalHours    Int
}

model Register {
  id        Int        @id @default(autoincrement())
  createdAt DateTime   @default(now())
  courseId  Int
  userId    Int
  status    Registered @default(NAO_MATRICULADO)
}

enum Role {
  STUDENT
  TEACHER
}

enum ClassType {
  REMOTA
  PRESENCIAL
}

enum Registered {
  MATRICULADO
  NAO_MATRICULADO
}
